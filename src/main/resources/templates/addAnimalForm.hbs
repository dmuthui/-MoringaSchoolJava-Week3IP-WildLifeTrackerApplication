<div class="view" style="background-image: url('/images/addAnimal.jpg'); background-repeat: no-repeat; background-size: cover; background-position: center center;">
    <div class="mask rgba-black-light align-items-center">
        <div class="container">
            <div class="indexRow">
                <div class="col-md-12 mb-4 yellow-text text-center">
                    <h1 class="h1-reponsive text-warning text-smallcase font-weight-bold mb-0 pt-md-5 pt-5 animated wobble" ><strong>ADD REGULAR ANIMAL:</strong></h1>
                        <div class="row">
                            <div class="col-sm-4 col-sm-offset-4">
                                <div class="content">
                                    <form action="/add-animal" method="post">
                                        <div class="form-group">
                                            <label for="animalName" style="color: yellow;"><strong>REGULAR ANIMAL NAME:</strong></label>
                                            <input type="text" id="animalName" name="animalName" class="form-control transparentInputFields" placeholder="Enter the regular animal name" required>
                                            <span id="duplicateError" style="color: red; display: none;">This animal name has already been entered.</span>
                                        </div>
                                        <div class="form-group">
                                            <label for="health" style="color: yellow;"><strong>REGULAR ANIMAL HEALTH:</strong></label>
                                            <select id="health" name="health" class="form-control transparentInputFields">
                                                <option value="Healthy">HEALTHY</option>
                                                <option value="Okay">OKAY</option>
                                            </select>
                                        </div>
                                        <div class="form-group">
                                            <label for="age" style="color: yellow;"><strong>REGULAR ANIMAL AGE:</strong></label>
                                            <select id="age" name="age" class="form-control transparentInputFields">
                                                <option value="middle age">MIDDLE AGE</option>
                                                <option value="Adult">ADULT</option>
                                            </select>
                                        </div>
                                        <button class="btn btn-info black-text-white-border" type="submit" name="add-animal" onclick="return validateForm()" style="background-color: yellow;"><strong>Add Regular Animal</strong></button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{{/partial}}

